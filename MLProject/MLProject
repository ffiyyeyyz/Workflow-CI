name: hotel_bookings_prediction

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      n_estimators: {type: int, default: 200}
      max_depth: {type: int, default: 30}
      min_samples_split: {type: int, default: 2}
      min_samples_leaf: {type: int, default: 1}
    command: >
      python modelling.py
      {n_estimators}
      {max_depth}
      {min_samples_split}
      {min_samples_leaf}
